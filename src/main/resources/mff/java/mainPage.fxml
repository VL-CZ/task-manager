<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<GridPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="mff.java.MainPageController" stylesheets="@styles.css">
    <VBox alignment="TOP_CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Text styleClass="headline">Task manager</Text>

        <ListView fx:id="taskList"/>

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#addTask">Add</Button>
            <Button onAction="#showTaskDetails">Details</Button>
            <Button onAction="#updateTask">Update</Button>
            <Button onAction="#removeTask">Delete</Button>
        </HBox>
        <VBox alignment="TOP_CENTER">
            <TextField fx:id="newTaskTitle" disable="true"/>
            <TextArea fx:id=""/>
            <TextField fx:id="updatedTaskTitle"/>
        </VBox>
    </VBox>
    <VBox GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" visible="false" alignment="CENTER"
          fx:id="detailsVBox" style="-fx-padding: 15px">
        <TextField fx:id="taskDetailTitle" disable="true" styleClass="disabled"/>
        <TextArea fx:id="taskDetailDescription" disable="true" styleClass="disabled"/>
        <TextField fx:id="taskDetailStatus" disable="true" styleClass="disabled"/>
        <HBox alignment="TOP_CENTER">
            <Button>Update</Button>
            <Button visible="false">Apply</Button>
            <Button visible="false">Cancel</Button>
        </HBox>
    </VBox>
</GridPane>
