<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mff.java.MainPageController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text styleClass="headline">Task manager</Text>

    <ListView fx:id="taskList"/>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#addTask">Add</Button>
        <Button onAction="#showTaskDetails">Details</Button>
        <Button onAction="#updateTask">Update</Button>
        <Button onAction="#removeTask">Delete</Button>
    </HBox>
    <VBox alignment="TOP_CENTER">
        <TextField fx:id="newTaskTitle"/>
        <TextArea fx:id=""/>
        <TextField fx:id="updatedTaskTitle"/>
    </VBox>
</VBox>
